{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Kea",
  "scopeName": "source.kea",
  "fileTypes": ["kea"],
  "firstLineMatch": "^(doc |fn |effect |type |struct |use |trait |handle )",
  "patterns": [
    { "include": "#doc-blocks" },
    { "include": "#comments" },
    { "include": "#triple-strings" },
    { "include": "#strings" },
    { "include": "#effect-keywords" },
    { "include": "#keywords" },
    { "include": "#effect-arrows" },
    { "include": "#annotations" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#upper-identifiers" },
    { "include": "#identifiers" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "doc-blocks": {
      "patterns": [
        {
          "comment": "Inline doc: doc Some text here.",
          "name": "comment.block.documentation.kea",
          "match": "^(\\s*)(doc)\\b(.+)$",
          "captures": {
            "2": { "name": "keyword.other.documentation.kea" },
            "3": { "name": "comment.block.documentation.kea" }
          }
        },
        {
          "comment": "Block doc: doc keyword followed by indented body lines",
          "name": "comment.block.documentation.kea",
          "begin": "^(\\s*)(doc)\\s*$",
          "end": "^(?!\\1\\s+|\\s*$)",
          "beginCaptures": {
            "2": { "name": "keyword.other.documentation.kea" }
          }
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-dash.kea",
          "match": "\\-\\-.*$"
        }
      ]
    },
    "triple-strings": {
      "patterns": [
        {
          "name": "string.quoted.triple.kea",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "patterns": [
            {
              "name": "constant.character.escape.kea",
              "match": "\\\\."
            },
            {
              "name": "meta.embedded.expression.kea",
              "begin": "\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.section.interpolation.begin.kea" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.section.interpolation.end.kea" }
              },
              "patterns": [
                { "include": "$self" }
              ]
            }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.kea",
          "begin": "(?<!\")(\")((?!\"\"))",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.kea",
              "match": "\\\\."
            },
            {
              "name": "meta.embedded.expression.kea",
              "begin": "\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.section.interpolation.begin.kea" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.section.interpolation.end.kea" }
              },
              "patterns": [
                { "include": "$self" }
              ]
            }
          ]
        }
      ]
    },
    "effect-keywords": {
      "patterns": [
        {
          "name": "keyword.control.effect.kea",
          "match": "\\b(effect|handle|resume|fail|catch|then)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.kea",
          "match": "\\b(if|else|case|when|cond|for|in|while)\\b"
        },
        {
          "name": "keyword.declaration.kea",
          "match": "\\b(fn|let|pub|type|struct|trait|impl|where|use|as|test|expr|effect|doc|import|alias|opaque)\\b"
        },
        {
          "name": "keyword.operator.logical.kea",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "constant.language.boolean.kea",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.none.kea",
          "match": "\\bNone\\b"
        }
      ]
    },
    "effect-arrows": {
      "patterns": [
        {
          "name": "meta.effect-arrow.kea",
          "match": "-\\[([^\\]]+)\\]>",
          "captures": {
            "0": { "name": "keyword.operator.effect.kea" },
            "1": { "name": "entity.name.type.effect.kea" }
          }
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "meta.annotation.kea",
          "match": "@([a-z_][a-zA-Z0-9_]*)(\\([^)]*\\))?",
          "captures": {
            "1": { "name": "entity.other.attribute-name.kea" },
            "2": { "name": "meta.annotation.arguments.kea" }
          }
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.kea",
          "match": "\\b0[xX][0-9a-fA-F][0-9a-fA-F_]*\\b"
        },
        {
          "name": "constant.numeric.binary.kea",
          "match": "\\b0[bB][01][01_]*\\b"
        },
        {
          "name": "constant.numeric.octal.kea",
          "match": "\\b0[oO][0-7][0-7_]*\\b"
        },
        {
          "name": "constant.numeric.float.kea",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.kea",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.effect.kea",
          "match": "\\?"
        },
        {
          "name": "keyword.operator.arrow.kea",
          "match": "->"
        },
        {
          "name": "keyword.operator.comparison.kea",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.arithmetic.kea",
          "match": "\\+\\+|<>|\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.update.kea",
          "match": "~"
        },
        {
          "name": "keyword.operator.assignment.kea",
          "match": "="
        }
      ]
    },
    "upper-identifiers": {
      "patterns": [
        {
          "name": "entity.name.type.kea",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.kea",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.receiver.kea",
          "match": "\\$"
        },
        {
          "name": "punctuation.separator.kea",
          "match": "[,.:;|]"
        },
        {
          "name": "punctuation.bracket.kea",
          "match": "[()\\[\\]{}]"
        }
      ]
    }
  }
}
