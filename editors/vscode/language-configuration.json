{
  "comments": {
    "lineComment": "--"
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "|", "close": "|", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["\"", "\""],
    ["|", "|"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(fn|if|else|case|cond|handle|for|while|effect|trait|impl|record|test|then)\\b",
    "decreaseIndentPattern": "^\\s*(else|then)\\b"
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*"
}
